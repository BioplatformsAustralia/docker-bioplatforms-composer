#!/bin/sh
. "${CCG_COMPOSER_HOME}"/lib/lib.sh

## ./develop.sh ci-docker-login                  (docker login for ci with creds from env)

info 'Docker login'
if [ -z "${DOCKER_USERNAME}" ] || [ -z "${DOCKER_PASSWORD}" ]; then
    fail "Docker credentials (DOCKER_USERNAME, DOCKER_PASSWORD) not available"
fi
docker login -u "${DOCKER_USERNAME}" --password="${DOCKER_PASSWORD}"
success "Docker login"
